{
  "compilerOptions": {
    "target": "ES6",
    "baseUrl": "./src",
    "rootDir": "./src",
    "module": "commonjs",
    "paths": {
      "@/*": ["*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": ["./src/**/*"]
}
