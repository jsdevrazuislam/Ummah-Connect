{
  "name": "full-stack-social-media-app",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"pnpm run backend\" \"pnpm run client\"",
    "backend": "cd backend && pnpm dev",
    "client": "cd client && pnpm dev",
    "lint": "pnpm lint:client && pnpm lint:backend",
    "lint:fix": "pnpm lint:client:fix && pnpm lint:backend:fix",
    "lint:client": "eslint client --config client/eslint.config.mjs --ext .ts,.tsx,.js,.jsx",
    "lint:backend": "eslint backend --config backend/eslint.config.mjs --ext .ts,.js",
    "lint:client:fix": "eslint client --config client/eslint.config.mjs --ext .ts,.tsx,.js,.jsx --fix",
    "lint:backend:fix": "eslint backend --config backend/eslint.config.mjs --ext .ts,.js --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "concurrently": "^9.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
     "eslint": "^9.31.0"
  },
  "lint-staged": {
    "client/**/*.{js,ts,jsx,tsx}": "pnpm lint:client",
    "backend/**/*.{js,ts}": "pnpm lint:backend"
  },
  "dependencies": {
    "client": "^0.0.1"
  }
}